{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true, // Consider turning on strict mode for better type checking
        "esModuleInterop": true,
        "skipLibCheck": true,
        "incremental": true,
        "sourceMap": true // Enable source maps for better debugging support
    },
    "include": [
        "src/**/*" // Only include files from the src directory
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test" // Exclude test directory from TypeScript compilation
    ]
}